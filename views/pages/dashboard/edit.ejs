<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div
          class="card shadow-2-strong card-registration"
          style="border-radius: 15px;background-color: #4A5568;color:#cbd5e0;"
        >
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Edit Biodata User</h3>
            <% if (msg.length !== 0) { %>
            <div class="alert alert-success" role="alert"><%= msg %></div>
            <% } else if (msgFail.length !== 0) { %>
            <div class="alert alert-danger" role="alert"><%= msgFail %></div>
            <% } %>
            <form method="POST" action="/api/user/<%=userBio.idUser %>?_method=PUT">
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input
                      name="firstName"
                      type="text"
                      id="firstName"
                      class="form-control form-control-lg "
                      required
                      value="<%=userBio.firstName %>"
                    />
                    <label class="form-label" for="firstName">First Name</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input
                      name="lastName"
                      required
                      type="text"
                      id="lastName"
                      value="<%=userBio.lastName %>"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label" for="lastName">Last Name</label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                    <input
                      name="phoneNumber"
                      required
                      type="tel"
                      value="<%=userBio.phoneNumber %>"
                      id="phoneNumber"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label" for="phoneNumber"
                      >Phone Number</label
                    >
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                    <input
                      name="birthday"
                      
                      type="date"
                      value="<%= userBio.birthday %>"
                      id="birthday"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label" for="birthday">Birthday</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <select
                    class="select form-control form-control-lg"
                    name="jenisKelamin"
                  >
                    <option value="1" selected disabled>SELECT GENDER</option>
                    <option value="Female" <%= userBio.jenisKelamin === "Female" ? 'selected' : ''%>>Female</option>
                    <option value="Male" <%= userBio.jenisKelamin === "Male" ? 'selected' : ''%>>Male</option>
                    <option value="Other" <%= userBio.jenisKelamin === "Other" ? 'selected' : ''%>>Other</option>
                  </select>
                  <label class="form-label" for="emailAddress">Gender</label>
                </div>
              </div>

              <div class="row align-items-center">
                <div class="col-md-6 mb-1">
                  <h6 class="mb-0">Alamat</h6>
                </div>
                <div class="col-md-9 pe-2">
                  <textarea
                    class="form-control"
                    name="address"
                    rows="3"
                    placeholder="Message sent to the employer"
                  ><%=userBio.address %></textarea>
                </div>
              </div>
              <div class="mt-2 pt-2">
                <input
                  class="btn btn-dark btn-lg me-2"
                  type="submit"
                  value="Submit"
                />
                <a
                  type="button"
                  href="/dashboard"
                  class="btn btn-success btn-lg me-2 px-5"
                  >Back</a
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
